<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Past Due</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//vjs.zencdn.net/4.11/video-js.css" rel="stylesheet">
    <script src="//vjs.zencdn.net/4.11/video.js"></script>
    @*<script src="~/Scripts/tether/tether.js"></script>
    <script src="~/Scripts/tether/tether.min.js"></script>*@
    <style>
        .container {
           padding-right: 15px;
           padding-left: 15px;
           /*margin-right: auto;
            margin-left: auto;*/
            margin-top: 10px;

        }
        .footer
        {
            position: absolute;
            bottom: 0;
            /*width: 100%;*/
            height: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar-custom navbar-fixed-top">
     
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Login", "Account")"><img style="margin-top: 5px; margin-bottom: 10px; margin-left:10px" src="@Url.Content("~/Resources/Silco.png")" ></a>
                @*@Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
      
    </div>
    <div class="container body-content">
        <div id="wrap">
          
              
                @Html.Partial("_LoginPartial")
                @RenderBody()
         
        </div>
        
        <div class="container">
            <div class="footer ">

                <p style="background-color: lightgray">
                    <strong> Silco Fire & Security</strong><br />
                    Confidential: The information contained in this website and other internal websites and computer systems is confidential information belonging to Silco Fire & Security. <br />
                    Unauthorized use, reproduction, or dissemination of this information is prohibited. <br />
                    513-733-5655 | silcofs.com| &copy; @DateTime.Now.Year
                </p>
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
